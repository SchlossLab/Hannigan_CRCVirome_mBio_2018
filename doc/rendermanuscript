#! /bin/bash

echo Rendering now...
echo Running Knitr...
Rscript -e "library(knitr); knit(input = './manuscript.Rmd', output = './manuscript.md')"
echo Running Pandoc...
pandoc --template=customtemplate.tex -H options.sty -s ./manuscript.md -f markdown -t latex -o ./manuscript.pdf --biblio=citations.bib --csl=./pnas.csl
